<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK" />

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProPeersMentorship"
        tools:targetApi="31">
        <activity
            android:name=".launch_mode_demo.FourthActivity"
            android:exported="false"
            android:label="@string/fourth_activity_label"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".launch_mode_demo.ThirdActivity"
            android:exported="false"
            android:label="@string/third_activity_label"
            android:launchMode="singleTask"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".launch_mode_demo.SecondActivity"
            android:exported="false"
            android:label="@string/second_activity_label"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ProPeersMentorship">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MusicPlayerService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
    </application>

</manifest>